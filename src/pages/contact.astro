---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Dad's Contracting & Equipment Hire">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Get Your Free Quote
      </h1>
      <p class="text-xl md:text-2xl max-w-2xl mx-auto">
        Ready to start your project? Contact us today for a free consultation and quote.
      </p>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <!-- Contact Form -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold mb-6">Request a Quote</h2>
        
        <form id="contact-form" class="space-y-6">
          <!-- Personal Info -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                First Name *
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                Last Name *
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Phone *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>

          <!-- Service Type -->
          <div>
            <label for="serviceType" class="block text-sm font-medium text-gray-700 mb-2">
              Service Required *
            </label>
            <select
              id="serviceType"
              name="serviceType"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              <option value="">Select a service...</option>
              <option value="equipment-rental">Equipment Rental</option>
              <option value="excavation">Excavation Services</option>
              <option value="hauling">Material Hauling</option>
              <option value="combo">Equipment + Operator</option>
              <option value="other">Other</option>
            </select>
          </div>

          <!-- Preferred Dates -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">
                Preferred Start Date
              </label>
              <input
                type="date"
                id="startDate"
                name="startDate"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">
                Estimated End Date
              </label>
              <input
                type="date"
                id="endDate"
                name="endDate"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
          </div>

          <!-- Project Details -->
          <div>
            <label for="projectDetails" class="block text-sm font-medium text-gray-700 mb-2">
              Project Details *
            </label>
            <textarea
              id="projectDetails"
              name="projectDetails"
              rows="4"
              required
              placeholder="Please describe your project, materials needed, site conditions, etc."
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-6 rounded-md font-semibold transition-colors"
          >
            Send Quote Request
          </button>
        </form>
      </div>

      <!-- Contact Info & Availability -->
      <div class="space-y-8">
        
        <!-- Contact Information -->
        <div class="bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Get In Touch</h2>
          
          <div class="space-y-4">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-blue-600 mr-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
              <div>
                <p class="font-semibold">Phone</p>
                <a href="tel:+1234567890" class="text-blue-600 hover:text-blue-800">(123) 456-7890</a>
              </div>
            </div>

            <div class="flex items-center">
              <svg class="w-6 h-6 text-blue-600 mr-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
              <div>
                <p class="font-semibold">Email</p>
                <a href="mailto:info@dadscontracting.com" class="text-blue-600 hover:text-blue-800">info@dadscontracting.com</a>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="font-semibold">Service Area</p>
                <p class="text-gray-600">Covering 50-mile radius from downtown</p>
              </div>
            </div>
          </div>

          <!-- Quick Contact Buttons -->
          <div class="mt-6 space-y-3">
            <a href="tel:+1234567890" class="w-full bg-green-600 hover:bg-green-700 text-white py-3 px-6 rounded-md font-semibold transition-colors text-center block">
              ðŸ“ž Call Now
            </a>
            <a href="https://wa.me/1234567890" class="w-full bg-green-500 hover:bg-green-600 text-white py-3 px-6 rounded-md font-semibold transition-colors text-center block">
              ðŸ’¬ WhatsApp
            </a>
          </div>
        </div>

        <!-- Current Availability -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Current Availability</h2>
          
          <!-- Simple Calendar View -->
          <div class="grid grid-cols-7 gap-1 text-center text-sm mb-4">
            <div class="font-semibold p-2">Sun</div>
            <div class="font-semibold p-2">Mon</div>
            <div class="font-semibold p-2">Tue</div>
            <div class="font-semibold p-2">Wed</div>
            <div class="font-semibold p-2">Thu</div>
            <div class="font-semibold p-2">Fri</div>
            <div class="font-semibold p-2">Sat</div>
            
            <!-- Sample week - you'll replace this with dynamic data -->
            <div class="p-2 rounded bg-gray-100">26</div>
            <div class="p-2 rounded bg-green-100 text-green-800">27</div>
            <div class="p-2 rounded bg-green-100 text-green-800">28</div>
            <div class="p-2 rounded bg-red-100 text-red-800">29</div>
            <div class="p-2 rounded bg-green-100 text-green-800">30</div>
            <div class="p-2 rounded bg-green-100 text-green-800">31</div>
            <div class="p-2 rounded bg-green-100 text-green-800">1</div>
          </div>

          <!-- Legend -->
          <div class="flex flex-wrap gap-4 text-sm">
            <div class="flex items-center">
              <div class="w-4 h-4 bg-green-100 rounded mr-2"></div>
              <span>Available</span>
            </div>
            <div class="flex items-center">
              <div class="w-4 h-4 bg-red-100 rounded mr-2"></div>
              <span>Booked</span>
            </div>
            <div class="flex items-center">
              <div class="w-4 h-4 bg-yellow-100 rounded mr-2"></div>
              <span>Tentative</span>
            </div>
          </div>
          
          <p class="mt-4 text-sm text-gray-600">
            * Availability shown is approximate. Final scheduling will be confirmed after quote approval.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Form submission script -->
  <script>
    document.getElementById('contact-form').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);
      
      try {
        // Here we'll add the serverless function call later
        console.log('Form data:', data);
        alert('Thank you! Your quote request has been submitted. We\'ll contact you within 24 hours.');
        e.target.reset();
      } catch (error) {
        console.error('Error:', error);
        alert('Sorry, there was an error submitting your request. Please call us directly at (123) 456-7890.');
      }
    });
  </script>
</Layout>
