---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Project Portfolio - 4010 Contracting LTD">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-construction-black to-construction-dark text-construction-white py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 lg:mb-8">
        Project Portfolio
      </h1>
      <p class="text-xl md:text-2xl lg:text-3xl max-w-3xl mx-auto">
        Explore our collection of case studies showcasing our completed jobs and expertise.
      </p>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
    <!-- Case Studies Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      <!-- Sample Case Study -->
      <!-- Recommended to populate with real project data -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <img src="/images/sample-project.jpg" alt="Sample Project" class="w-full h-64 object-cover">
        <div class="p-6 lg:p-8">
          <h3 class="text-2xl lg:text-3xl font-bold mb-4 lg:mb-6">Project Title</h3>
          <p class="text-gray-600 mb-4 lg:mb-6 lg:text-lg">
            Brief description of the project highlighting main achievements or challenges.
          </p>
          <a href="/portfolio/project-title" class="text-construction-orange hover:text-construction-orange-dark font-medium inline-flex items-center hover:gap-2 transition-all duration-300 text-lg">
            Read More <span class="ml-1 transform transition-transform duration-300 hover:translate-x-1">â†’</span>
          </a>
        </div>
      </div>
      <!-- Add more projects as needed -->
    </div>
  </div>
</Layout>
